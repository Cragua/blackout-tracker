# Telegram Bot
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook URL (for production deployment)
# Set this to: https://your-domain.vercel.app/api/telegram/webhook
TELEGRAM_WEBHOOK_URL=

# Optional: Secret for webhook verification
TELEGRAM_WEBHOOK_SECRET=

# Database (PostgreSQL) - Optional
# Required for notification subscriptions
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=

# Cron job secret (REQUIRED for external cron service)
# Generate a random string: openssl rand -hex 32
# Used by cron-job.org or similar services to authenticate
CRON_SECRET=your_random_secret_here
